<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/double_proxy_constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/double_proxy_change_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="31dp"
        android:text="引き渡し交代の代理人設定画面です。"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_proxy_change_block_list"
        android:layout_width="113dp"
        android:layout_height="559dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/listborder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_proxy_change_titile" />

    <ListView
        android:id="@+id/double_proxy_change_room_list"
        android:layout_width="130dp"
        android:layout_height="553dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="172dp"
        android:background="@drawable/listborder"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_block_list"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/double_proxy_change_ryosei_list"
        android:layout_width="654dp"
        android:layout_height="507dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/listborder"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_room_list"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/double_proxyu_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_proxy_change_titile" />

    <Button
        android:id="@+id/double_proxy_change_go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="948dp"
        android:layout_marginTop="620dp"
        android:text="戻る"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/double_proxy_change_titile" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/double_proxy_change_titile"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/proxy_editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="検索したい名前を入力"
            android:inputType="textPersonName"
            android:maxLength="20"
            android:text="" />

        <Button
            android:id="@+id/proxy_name_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="寮生検索"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- フッター -->
    <include
        android:id="@+id/include_footer"
        layout="@layout/include_footer" />

</androidx.constraintlayout.widget.ConstraintLayout>
